 ﻿<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppGuiaCurso.MainPage"
             Title="Módulos">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Black"/>

        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#DF0101" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="BorderColor" Value="Black" />
        </Style>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*, *" RowDefinitions="*, *, *, *, *, *"
          VerticalOptions="FillAndExpand" Padding="3">

        <Button x:Name="btn00" Grid.Row="0" Grid.Column="0" Text="1º MÓDULO" Clicked="BtnPrimeiro_Clicked"/>
        <Button x:Name="btn10" Grid.Row="1" Grid.Column="0" Text="2º MÓDULO" Clicked="BtnSegundo_Clicked"/>

        <Button x:Name="btn01" Grid.Row="0" Grid.Column="1" Text="3º MÓDULO" Clicked="BtnTerceiro_Clicked"/>
    </Grid>


</ContentPage>